<div class="h-screen flex items-center justify-center">
  <div class="text-center">
    <% if @exam.submitted? %>
      <div class="text-center text-6xl mb-8">
        Thank you
      </div>
      We will review your exam, and get back to you.
    <% else %>
      <div class="text-center text-6xl mb-8">
        Welcome, <%= @exam.user_full_name %>
      </div>
      <%= link_to "Start the exam", exam_entries_path(exam_id: @exam.id), data: { "turbo-method": "post" }, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-8 rounded" %>
    </div>
  <% end %>
</div>
