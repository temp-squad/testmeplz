<% if exam.prev_test(test) %>
  <%= button_to "Back", exam_test_path(exam_id: exam.id, id: exam.prev_test(test)), method: :get, class: "btn btn-primary " %>
<% else %>
  <%= button_to "Back", "#", method: :get, class: "btn btn-primary", disabled: true %>
<% end %>
<% if exam.next_test(test) %>
  <%= button_to "Next", exam_test_path(exam_id: exam.id, id: exam.next_test(test)), method: :get, class: "btn btn-primary " %>
<% else %>
  <%= button_to "Next", "#", method: :get, class: "btn btn-primary", disabled: true %>
<% end %>
<% if exam.last_test(test) %>
  <%= turbo_frame_tag :submission do %>
    <%= button_to "Submit", new_exam_submission_path(exam_id: exam.id), method: :get, class: "btn btn-success ", confirm: "Once answers are submiited, you will not be able to make any changes. Are you sure?" %>
  <% end %>
<% else %>
  <%= button_to "Submit", "#", method: :get, class: "btn btn-success", disabled: true %>
<% end %>
